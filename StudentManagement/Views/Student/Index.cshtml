@model IEnumerable<StudentManagement.ViewModel.StudentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<h1>Index</h1>

<div class="content-body">
    <div class="container-fluid">
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <div id="grid_table" style="margin:auto;"></div>
        <form class="form-inline">
            <input class="form-control mr-sm-2" name="SearchString" type="search" value="@ViewData["cardata"]" placeholder="Search" aria-label="Search">
            <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search">
        </form>
        <br />
        <table id="my_table" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%" border="1" style="margin:auto;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JoinDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ProfilePicture))
                            {
                                <img src="~/Images/@item.ProfilePicture" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                            }
                            else
                            {
                                <img src="~/Dummy/dummy.png" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                            }

                            @item.FullName
                            @*@Html.DisplayFor(modelItem => item.FullName)*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JoinDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
