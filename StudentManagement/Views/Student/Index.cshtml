@model IEnumerable<StudentManagement.ViewModel.StudentViewModel>

@{
    ViewData["Title"] = "Index";

}
@if (TempData["ResultOk"] != null)
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    @*<script src="~/AdminLTE-3.2.0/plugins/toastr/toastr.min.js"></script>*@
    <script src="~/js/toaster.js"></script>
    @*<h4 class="alert alert-success alert-dismissible">@TempData["ResultOk"]</h4>*@
    <script type="text/javascript">
        toastr.success('@TempData["ResultOk"]');
    </script>

    @*<strong>Success!</strong> Indicates a successful or positive action.*@
}
<script src="~/AdminLTE-3.2.0/dist/js/demo.js"></script>
<script src="~/AdminLTE-3.2.0/plugins/datatables/jquery.dataTables.min.js"></script>
<div class="content-wrapper">
    <p>
        <a class="btn btn-primary" href="/Student/Create" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#sagar-div">Create New</a>
    </p>
    <br />
    <div class="card-body">
        <table id="example2" class=" table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JoinDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            <img src="~/Images/@item.ProfilePicture" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                            @item.FullName
                            @*@Html.DisplayFor(modelItem => item.FullName)*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JoinDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a id="btnEdit"  asp-action="Edit" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#sagar-div" asp-route-id="@item.StudentId"><i class="fas fa-edit"></i></a> |
                            <a  asp-action="Details" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#sagar-div" asp-route-id="@item.StudentId"><i class="far fa-file-alt"></i></a> |
                            <a  asp-action="Delete" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#sagar-div" asp-route-id="@item.StudentId"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    //example 2
    $(document).ready(function () {
        var table2 = $('#example2').DataTable({
            scrollY: 200,
            scrollCollapse: true,
            scroller: true,
            paging: true,
            responsive: true,
            filter: true,
        });
    });
</script>


